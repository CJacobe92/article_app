<div class="h-[2vh] bg-gray-900 text-white flex items-center p-4 text-sm border-t border-teal-500 justify-between">
    <p><%=@article.title%></p>
    <p><b>Published:</b> <%=@article[:updated_at].strftime("%m/%y %H:%M:%S %p")%></p>
    <div class="flex flex-row items-center">
        <p><b>Read:</b>
            <%reading_time= (@article[:body].length / 1500).ceil %>
            <%= "#{reading_time} #{reading_time ==  1 ? "minute" : "minutes"}"%>
        </p>
        <button class="pl-6 pr-2 mx-2 font-bold text-teal-500 border-l border-white">
        <%=link_to "Edit", article_edit_path(@article[:id]) %>
        </button>
    </div>
</div>
