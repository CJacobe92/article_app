
<%= form_with url: article_update_path, method: :patch, scope: :article, local: true, class: "flex justify-center  w-[100%] px-16 bg-white shadow-md shadow-gray-500 h-[86vh] overflow-y-scroll px-40", id: "editForm" do |form| %>
  <div class="px-10 shadow-md shadow-gray-500 w-[100%] flex flex-row bg-white">
    <div class="flex flex-col m-2">
      <div class="flex flex-col m-2">
        <%= form.label :title, class: "py-1 font-bold" %>
        <%= form.text_field :title, class: "border border-black border-opacity-30" %>
      </div>

      <div class="flex flex-col m-2">
        <%=form.label "Image", class: "py-1 font-bold"%>
        <%= form.file_field :image, id: "myFile"%>
        <%= form.hidden_field :image, id: "setMyFileValue" %>

      </div>
      <div class="flex flex-col m-2">
          <p class= "py-1 font-bold">Preview</p>
          <img class="flex items-center justify-center hidden object-cover border border-gray-300 rounded-md w-80 h-80" id="imgPreview"/>

      </div>
    </div>

    <div class="flex flex-col w-full m-2">
    <div class="h-[60vh]">
        <p class="py-2 font-bold">Body</p>
        <div id="editor"><%= raw @article[:body] %></div>
        <%=form.hidden_field :body, id: "write_text_area"%>
      </div>
      <div class="m-2">
        <%= form.submit "Save", id: "saveBtn", class: "hidden"%>
      </div>
    </div>
  </div>
<% end %>


<%=javascript_include_tag("edit_article") %>
<%=javascript_include_tag("edit_quill") %>
