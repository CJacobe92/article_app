
<%= form_with url: article_create_path, method: :post, scope: :article, local: true, class: "flex flex-row w-[100%] px-16 bg-white shadow-md shadow-gray-500 h-[86vh] overflow-y-scroll px-40", id: "write_form" do |form| %>

<div class="flex flex-col m-2">
  <div class="flex flex-col m-2">
    <%= form.label :title, class: "py-1 font-bold" %>
    <%= form.text_field :title, class: "rounded-md" %>
  </div>

  <div class="flex flex-col m-2">
    <%=form.label "Image", class: "py-1 font-bold"%>
    <%= form.file_field :image, id: "myWriteFile"%>
    <%= form.hidden_field :image, id: "setMyWriteFileValue" %>

  </div>
  <div class="flex flex-col m-2">
      <p class= "py-1 font-bold">Preview</p>
      <img class="flex items-center justify-center object-cover border border-gray-300 rounded-md w-80 h-80 hidden" id="imgWritePreview"/>

  </div>
</div>

<div class="flex flex-col w-full">
  <div class="flex flex-col m-2">
    <%= form.label :body, class: "font-bold py-2" %>
    <%= form.text_area :body, class: "h-[70vh] resize-none flex flex-col overflow-y-scroll rounded-md text-sm w-full" %>
  </div>
  <div class="m-2">
    <%= form.submit "Save", id: "saveWriteBtn", class: "hidden"%>
  </div>
</div>

<% end %>


<%=javascript_include_tag("write_article") %>
