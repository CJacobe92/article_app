
<%= form_with url: article_create_path, method: :post, scope: :article, local: true, class: "flex justify-center w-[100%] bg-gray-200 px-16 bg-white shadow-md shadow-gray-500 h-[86vh] overflow-y-scroll px-40", id: "write_form" do |form| %>

<div class="px-10 shadow-md shadow-gray-500 w-[100%] flex flex-row bg-white">
  <div class="flex flex-col m-2">
    <div class="flex flex-col m-2">
      <%= form.label :title, class: "py-1 font-bold" %>
      <%= form.text_field :title, class: "border border-black border-opacity-30" %>
    </div>

    <div class="flex flex-col m-2">
      <%=form.label "Image", class: "py-1 font-bold"%>
      <%= form.file_field :image, id: "myWriteFile"%>
      <%= form.hidden_field :image, id: "setMyWriteFileValue" %>

    </div>
    <div class="flex flex-col m-2">
        <p class= "py-1 font-bold">Preview</p>
        <img class="flex items-center justify-center hidden object-cover border border-gray-300 rounded-md w-80 h-80" id="imgWritePreview"/>

    </div>
  </div>

  <div class="flex flex-col w-full m-2">
    <div class="h-[60vh]">
      <p class="py-2 font-bold"> Body</p>
      <div id="editor"></div>
      <%=form.hidden_field :body, id: "write_text_area"%>
    </div>
    <div class="m-2">
      <%= form.submit "Save", id: "saveWriteBtn", class: "hidden"%>
    </div>
  </div>
  </div>

<% end %>


<%=javascript_include_tag("write_article") %>
<%=javascript_include_tag("write_quill") %>
